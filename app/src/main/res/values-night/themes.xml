<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="background">@color/dark</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <style name="SettingsScreenSwitch.theme">
        <item name="android:checked">true</item>
        <item name="android:thumbTint">@color/blue</item>
        <item name="android:trackTint">@color/blue_pale</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SearchIcons.theme">
        <item name="tint">@color/dark</item>
    </style>

    <style name="SearchEditText.theme">
        <item name="android:textColorHint">@color/dark</item>
    </style>

    <style name="SearchBarContainer.theme">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="TrackSmallText.theme">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TrackArrowAndDivider">
        <item name="tint">@color/white</item>
    </style>

    <style name="TrackSmallText.SongName.theme">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
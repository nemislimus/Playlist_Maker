<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:app="http://schemas.android.com/apk/res-auto">


<!--    ////////// Стили кнопок Setting экрана-->
    <style name="SettingScreenButtonBase">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="cornerRadius">0dp</item>
        <item name="iconPadding">24dp</item>
        <item name="iconSize">24dp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="SettingScreenButtonBase.MenuButtons">
        <item name="android:textSize">@dimen/settings_menu_text_size</item>
        <item name="android:layout_height">61dp</item>
        <item name="iconTint">@color/white</item>
        <item name="iconGravity">end</item>
    </style>

    <style name="SettingScreenButtonBase.BackToMainButton">
        <item name="android:textSize">@dimen/main_screen_text_size</item>
        <item name="android:layout_height">56dp</item>
        <item name="iconTint">@color/white</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="SettingsScreenSwitch">
        <item name="android:checked">true</item>
        <item name="android:textSize">@dimen/settings_menu_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:layout_height">61dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="switchPadding">0dp</item>
        <item name="fontFamily">@font/ys_display_medium</item>

    </style>


<!--    ////////// Стили для базовых контейнеров -->
    <style name="MainScreenLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/dark</item>
    </style>

    <style name="SettingsScreenLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:background">@color/dark</item>
    </style>


</resources>
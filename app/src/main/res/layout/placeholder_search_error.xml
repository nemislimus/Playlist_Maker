<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="86dp"
    android:paddingHorizontal="@dimen/classic_size_24dp"
    android:orientation="vertical"
    android:backgroundTint="@android:color/transparent">

    <ImageView
        android:id="@+id/ivPlaceholderImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:src="@drawable/no_internet" />

    <TextView
        style="@style/SearchPlaceholderText"
        android:id="@+id/tvPlaceholderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="@dimen/classic_size_16dp"
        android:paddingBottom="@dimen/classic_size_24dp"
        android:textSize="@dimen/classic_text_size_22"
        android:fontFamily="@font/ys_display_medium"
        android:textFontWeight="400"
        android:text="@string/search_error_no_internet"
        android:gravity="center" />


    <Button
        android:id="@+id/btnPlaceholderRefresh"
        style="@style/SearchPlaceholderButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingTop="@dimen/classic_size_10dp"
        android:paddingBottom="@dimen/classic_size_10dp"
        android:paddingStart="@dimen/classic_size_14dp"
        android:paddingEnd="@dimen/classic_size_14dp"
        android:textSize="@dimen/classic_text_size_14"
        android:fontFamily="@font/ys_display_medium"
        android:textFontWeight="500"
        android:textAllCaps="false"
        android:text="@string/refresh"
        app:cornerRadius="54dp"
        android:foreground="?attr/selectableItemBackground"
        android:letterSpacing="0"
        android:visibility="visible"
        android:stateListAnimator="@null"
        android:elevation="0dp" />

</LinearLayout>

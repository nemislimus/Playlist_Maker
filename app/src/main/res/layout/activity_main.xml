<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MainScreenLayout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/main_title"
        style="@style/MainScreenTextBase" />

    <Button
        android:id="@+id/SearchButton"
        style="@style/MainScreenButtonBase"
        android:layout_marginTop="40dp"
        android:text="@string/main_search"
        app:icon="@drawable/ic_search" />

    <Button
        android:id="@+id/MediatekaButton"
        style="@style/MainScreenButtonBase"
        android:layout_marginTop="@dimen/main_layout_margin"
        android:text="@string/main_mediateka"
        app:icon="@drawable/ic_mediateka" />

    <Button
        android:id="@+id/SettingsButton"
        style="@style/MainScreenButtonBase"
        android:layout_marginTop="@dimen/main_layout_margin"
        android:layout_marginBottom="28dp"
        android:text="@string/main_settings"
        app:icon="@drawable/ic_settings" />

</LinearLayout>
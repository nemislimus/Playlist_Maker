<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/player_bottom_sheet_background">

    <View
        android:id="@+id/header"
        android:layout_width="@dimen/classic_size_50dp"
        android:layout_height="@dimen/classic_size_4dp"
        android:background="@drawable/bottom_sheet_header"
        android:layout_marginTop="@dimen/classic_size_8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvTitleBottomSheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_track_to_playlist"
        android:fontFamily="@font/ys_display_medium"
        android:letterSpacing="0"
        android:textFontWeight="500"
        android:textSize="@dimen/classic_text_size_19"
        android:textColor="?attr/colorSecondaryVariant"
        app:layout_constrainedWidth="true"
        android:layout_marginTop="@dimen/classic_size_30dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        app:layout_constraintTag="playlists_ph_button"
        android:id="@+id/createNewPlaylistButton"
        style="@style/MediatekaButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingTop="@dimen/classic_size_10dp"
        android:paddingBottom="@dimen/classic_size_10dp"
        android:paddingStart="@dimen/classic_size_14dp"
        android:paddingEnd="@dimen/classic_size_14dp"
        android:textSize="@dimen/classic_text_size_14"
        android:fontFamily="@font/ys_display_medium"
        android:textFontWeight="500"
        android:textAllCaps="false"
        android:text="@string/create_new_playlist_button"
        app:cornerRadius="54dp"
        android:foreground="?attr/selectableItemBackground"
        android:letterSpacing="0"
        android:visibility="visible"
        android:stateListAnimator="@null"
        android:elevation="0dp"
        android:layout_marginTop="@dimen/classic_size_28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitleBottomSheet"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPlaylistsList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="@dimen/classic_size_24dp"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/createNewPlaylistButton"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/bs_playlist_list_item"/>

</androidx.constraintlayout.widget.ConstraintLayout>
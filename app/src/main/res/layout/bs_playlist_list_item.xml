<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/classic_size_13dp"
    android:layout_marginEnd="@dimen/classic_size_12dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@android:color/transparent"
    android:foreground="?attr/selectableItemBackground">

    <androidx.cardview.widget.CardView
        android:id="@+id/playlistImageCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/classic_size_8dp"
        app:cardCornerRadius="@dimen/classic_size_2dp"
        android:layout_gravity="start|center_vertical"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/iv_playlistImage"
            android:layout_width="@dimen/search_list_image_45dp"
            android:layout_height="@dimen/search_list_image_45dp"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent"
            android:contentDescription="@string/playlist_menu_image"
            android:src="@drawable/ic_placeholder_track_image"/>

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="@dimen/classic_size_14dp"
        android:layout_marginStart="53dp"
        android:layout_marginEnd="32dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:background="@android:color/transparent">

        <TextView
            style="@style/TrackSmallText.SongName.theme"
            android:id="@+id/tv_playlistName"
            android:text="Smells Like Teen Spirit Smells Like Teen Spirit" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/transparent"
            android:gravity="bottom">

            <TextView
                style="@style/TrackSmallText.theme"
                android:id="@+id/tv_tracksCount"
                android:layout_weight="1"
                android:text="98 tracks" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="background">@color/blue</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/dark</item>
        <item name="colorOnSecondary">@color/grey</item>
        <item name="colorAccent">@color/grey_pale</item>
    </style>

    <style name="Theme.PlaylistMaker" parent="Base.Theme.PlaylistMaker" />

    <style name="SettingsScreenSwitch.theme">
        <item name="android:checked">false</item>
        <item name="android:thumbTint">@color/grey</item>
        <item name="android:trackTint">@color/grey_pale</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="SearchIcons.theme">
        <item name="tint">@color/grey</item>
    </style>

    <style name="SearchEditText.theme">
        <item name="android:textColorHint">@color/grey</item>
    </style>

    <style name="SearchBarContainer.theme">
        <item name="android:backgroundTint">@color/grey_pale</item>
    </style>

    <style name="TrackSmallText.theme">
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="TrackArrowAndDivider">
        <item name="tint">@color/grey</item>
    </style>

    <style name="TrackSmallText.SongName.theme">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PlaylistEditTextSettings" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/playlist_create_field_stroke</item>
        <item name="android:textColorHint">?attr/colorSecondaryVariant</item>
        <item name="hintTextColor">@color/blue</item>
        <item name="hintTextAppearance">@style/CreatePlaylistFieldText</item>
    </style>

    <style name="CreatePlaylistFieldText">
        <item name="android:textSize">@dimen/classic_text_size_12</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="DialogTheme">
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
        <item name="buttonBarNeutralButtonStyle">@style/Alert.Button.Neutral</item>
    </style>

    <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Alert.Button.Neutral" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
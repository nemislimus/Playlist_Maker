<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:app="http://schemas.android.com/apk/res-auto">


    <style name="LogoTextMain">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/main_screen_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textFontWeight">500</item>
    </style>

<!--    ///////// Стили для кнопок Main экрана-->
    <style name="MainScreenButtons" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/main_screen_text_size</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:layout_marginHorizontal">@dimen/main_layout_margin</item>
        <item name="android:layout_marginTop">@dimen/main_layout_margin</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="cornerRadius">@dimen/button_classic_radius</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="iconSize">24dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

<!--    ////////// Стили кнопок Setting экрана-->
    <style name="SettingScreenButtonOrigin">
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="cornerRadius">0dp</item>
        <item name="iconPadding">24dp</item>
        <item name="iconSize">24dp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">@dimen/settings_menu_text_size</item>
        <item name="android:layout_height">60dp</item>
        <item name="iconTint">?attr/colorOnSecondary</item>
        <item name="iconGravity">end</item>
    </style>

    <style name="SettingScreenButtonOrigin.OutOfSettingsButton">
        <item name="android:textSize">@dimen/main_screen_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:layout_height">56dp</item>
        <item name="iconTint">?attr/colorSecondaryVariant</item>
        <item name="iconGravity">textStart</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>

    <style name="SettingsScreenSwitch">
        <item name="android:textSize">@dimen/settings_menu_text_size</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="switchPadding">0dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>


<!--    ////////// Стили для базовых контейнеров -->
    <style name="MainScreenLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">?attr/background</item>
    </style>

    <style name="SettingsScreenLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:background">?attr/colorSecondary</item>
    </style>

    <style name="SearchScreenLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">?attr/colorSecondary</item>
    </style>

<!--    ////Стили для строки поиска-->

    <style name="SearchIcons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_marginTop">@dimen/search_bar_margin_top</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="SearchEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/classic_size_16dp</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_marginTop">@dimen/search_bar_text_margin_top</item>
        <item name="android:background">@null</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:hint">@string/main_search</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">@dimen/search_bar_text_padding</item>
        <item name="android:paddingEnd">@dimen/search_bar_text_padding</item>
        <item name="android:textCursorDrawable">@drawable/search_bar_cursor</item>
        <item name="android:textSize">@dimen/settings_menu_text_size</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="SearchBarContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginHorizontal">@dimen/classic_size_16dp</item>
        <item name="android:background">@drawable/search_background</item>
    </style>

    <style name="TrackSmallText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start|bottom</item>
        <item name="android:textSize">@dimen/text_size_11sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TrackSmallText.SongName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start|bottom</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="SearchPlaceholderButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:backgroundTint">?attr/colorSecondaryVariant</item>
    </style>

    <style name="SearchPlaceholderText">
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
    </style>

</resources>
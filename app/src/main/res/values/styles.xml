<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:app="http://schemas.android.com/apk/res-auto">


    <style name="MainScreenTextBase">
        <item name="android:textColor"> @color/white </item>
        <item name="fontFamily"> @font/ys_display_medium </item>
        <item name="android:textSize">@dimen/main_screen_text_size</item>
        <item name="android:textAllCaps">false</item>
    </style>

<!--    ///////// Стили для кнопок Main экрана-->
    <style name="MainScreenButtonBase">
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">@dimen/main_screen_text_size</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginHorizontal">@dimen/main_layout_margin</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="cornerRadius">@dimen/button_classic_radius</item>
        <item name="iconTint">@color/dark</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="iconSize">24dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

<!--    ////////// Стили кнопок Setting экрана-->
    <style name="SettingScreenButtonBase">
        <item name="android:textColor">@color/dark</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="cornerRadius">0dp</item>
        <item name="iconPadding">24dp</item>
        <item name="iconSize">24dp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="SettingScreenButtonBase.MenuButtons">
        <item name="android:textSize">@dimen/settings_menu_text_size</item>
        <item name="android:layout_height">61dp</item>
        <item name="iconTint">@color/grey</item>
        <item name="iconGravity">end</item>
    </style>

    <style name="SettingScreenButtonBase.BackToMainButton">
        <item name="android:textSize">@dimen/main_screen_text_size</item>
        <item name="android:layout_height">56dp</item>
        <item name="iconTint">@color/dark</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="SettingsScreenSwitch">
        <item name="android:checked">false</item>
        <item name="android:textSize">@dimen/settings_menu_text_size</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:layout_height">61dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="switchPadding">0dp</item>
        <item name="fontFamily">@font/ys_display_medium</item>

    </style>


<!--    ////////// Стили для базовых контейнеров -->
    <style name="MainScreenLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/background</item>
    </style>

    <style name="SettingsScreenLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:background">@color/white</item>
    </style>


</resources>